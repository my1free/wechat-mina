page{
  width: 100%;
  background-color: #efefef;
  padding-bottom: 150rpx;
}

.container{
  width: 100%;
}

.container .row{
  width: 100%;
  height: 100rpx;
  background-color: white;
  margin-top: 10rpx;
  display: flex;
  padding: 10rpx;
}

.container .row .location{
  width: 80%;
  height: 100%;
  text-align: center;
  padding-top: 3%;
}

.container .row .arrow{
    width: 20%;
    height: 100%;
    font-size:70rpx;
    color:gray;
    border-left: 2rpx solid gray;
}
.container .row .arrow text{
  margin-left: 50rpx;
}